<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>TOURNAMENT MANAGEMENT SYSTEM</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link rel="stylesheet" href="./styles/main.css">
</head>

<body>
  <form action="/add" method="post">
    <input type="text" name="user_type">
    <button type="submit">Add</button>
  </form>
  </h2>

  <div class="container">
    <table class="table w-50">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">user_type</th>
          <th scope="col">update</th>
          <th scope="col">delete</th>
        </tr>
      </thead>
      <tbody>
        <% result.forEach(function(user, i){ %>
          <tr>
            <th>
              <%= i+1%>
            </th>
            <td>
              <%= user.ut_desc%>
            </td>
            <td>
              <form action="/edit" method="post">
                <button class="btn bg-secondary text-white" type="submit" name="user_id"
                  value="<%= user.ut_id %>"><b>edit</b></button>
              </form>
            </td>
            <td>
              <form action="/delete" method="post">
                <button class="btn bg-danger text-white" type="submit" name="user_id"
                  value="<%= user.ut_id %>"><b>x</b></button>
              </form>
            </td>
          </tr>
          <% }); %>
      </tbody>
    </table>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>

</body>

</html>