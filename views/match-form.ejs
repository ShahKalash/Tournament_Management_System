        <form action="/add_tournament" method="post">
            <div class="form-group">
                <label for="tournament-type">Team 1:</label>
                <select id="tournament-type" name="t-type" required>
                    <option value="">Select Type</option>
                    <option value="GICT SUPER KINGS">GICT SUPER KINGS</option>
                </select>
            </div>

            <div class="form-group">
                <label for="tournament-type">Team 2:</label>
                <select id="tournament-type" name="t-type" required>
                    <option value="">Select Type</option>
                    <option value="SAS SMASHERS">SAS SMASHERS</option>
                </select>
            </div>
            
            <div class="form-group inline">
                <label class="label-text" for="tournament-start">Date:</label>
                <input type="date" id="tournament-start" name="t-start" required>
            </div>

            <div class="form-group">
                <label for="tournament-type">Stadium:</label>
                <select id="tournament-type" name="t-type" required>
                    <option value="">Select Stadium</option>

                    <% stadium_data.forEach(function(data, i){%>

                    <option value="<%= data.st_id %>"><%= data.st_name %></option>

                    <%}); %>

                </select>
            </div>
            
            <div class="form-group inline">
                <label class="label-text" for="tournament-end">Start Time:</label>
                <input type="datetime" id="tournament-end" name="t-end" required>
            </div>

            <div class="form-group inline">
                <label class="label-text" for="tournament-end">End Time:</label>
                <input type="datetime" id="tournament-end" name="t-end" required>
            </div>

            <div class="form-group">
                <label for="tournament-city">Umpire 1:</label>
                <select id="tournament-city" name="t-city" required>
                    <option value="">Select Umpire</option>
                        <option value="Dhirendra Shastri">Dhirendra Shastri</option>
                        <option value="Mahesh Bhatt">Mahesh Bhatt</option>
                        <option value="Ramchand Tripathi">Ramchand Tripathi</option>
                </select>
            </div>
            <div class="form-group">
                <label for="tournament-city">Umpire 2:</label>
                <select id="tournament-city" name="t-city" required>
                    <option value="">Select Umpire</option>
                        <option value="Dhirendra Shastri">Dhirendra Shastri</option>
                        <option value="Mahesh Bhatt">Mahesh Bhatt</option>
                        <option value="Ramchand Tripathi">Ramchand Tripathi</option>
                </select>
            </div>
            <div class="form-group">
                <label for="tournament-city">Umpire 3:</label>
                <select id="tournament-city" name="t-city" required>
                    <option value="">Select Umpire</option>
                        <option value="Dhirendra Shastri">Dhirendra Shastri</option>
                        <option value="Mahesh Bhatt">Mahesh Bhatt</option>
                        <option value="Ramchand Tripathi">Ramchand Tripathi</option>
                </select>
            </div>

            
            <button type="submit">Register</button>
            <button class="back-btn" onclick="window.location.href = '/';">Back</button>
        </form>
    </div>

